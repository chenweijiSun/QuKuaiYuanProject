<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DEDEDE" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/touxiang" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_below="@+id/iv_touxiang"
            android:layout_marginLeft="@dimen/input_padding"
            android:layout_marginRight="@dimen/input_padding"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="手机" />

        <EditText
            android:id="@+id/et_passowrd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_below="@+id/et_phone"
            android:layout_marginLeft="@dimen/input_padding"
            android:layout_marginRight="@dimen/input_padding"
            android:layout_marginTop="@dimen/padding_15dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="PASSWORD" />

        <TextView
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="@string/cont_message"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_register"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/btn_login_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/btn_login_bg"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
